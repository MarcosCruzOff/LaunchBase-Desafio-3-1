{% extends "layout.njk" %}

{% block content %}

      <div class="cards">
       
       {% for item in items %}
            <div class="card" itemid="{{item.id}}">
               <img
                  src="{{item.imagem}}"
                  alt="{{item.titulo}}"
               />
               <h4>{{item.curso}}</h4>
               <h1>{{item.titulo}}</h1>
               <p>{{item.tempo}}</p>
            </div>
       {% endfor %}

      </div>

      <div class="modal-overlay">
         <div class="modal">
            <a class="close-modal">
               <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
               <iframe src="" frameborder="0"></iframe>
            </div>
         </div>
      </div>

      <script src="../../index.js"></script>
 

{% endblock content %}